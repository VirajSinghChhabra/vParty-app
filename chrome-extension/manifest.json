{
    "manifest_version": 3,
    "name": "vParty Extension",
    "version": "1.0",
    "description": "Syncs video playback and chat for a better watch party experience.",
    "permissions": [ 
        "activeTab",
        "storage",
        "tabs",
        "webNavigation"
    ],
    "background": {
        "service_worker": "js/background.js"
    },
    "action": {
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": [
                "http://localhost:3000/*", 
                "*://*.netflix.com/*"
            ],
            "js": [
                "js/content.js"
            ]
        }
    ],
    "host_permissions": [
        "*://*.netflix.com/*",
        "http://localhost:3000/*",
        "https://cdnjs.cloudflare.com/*"
    ],
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self'",
        "sandbox": "sandbox allow-scripts allow-forms allow-popups allow-modals; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://cdnjs.cloudflare.com; object-src 'self'"
    }
}