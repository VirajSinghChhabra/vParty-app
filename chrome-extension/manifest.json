{
    "manifest_version": 3,
    "name": "vParty Extension",
    "version": "1.0",
    "description": "Syncs video playback and chat for a better watch party experience.",
    "permissions": ["storage", "identity"],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "assets/icon16.png",
            "48": "assets/icon48.png",
            "128": "assets/icon128.png"
        }
    },
    "icons": {
        "16": "assets/icon16.png",
        "48": "assets/icon48.png",
        "128": "assets/icon128.png"
    },
    "content_scripts": [
        {
            "matches": ["*://*.netflix.com/*"],
            "js": ["content.js"]
        }
    ]
}
