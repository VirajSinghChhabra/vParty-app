{
    "manifest_version": 3,
    "name": "vParty Extension",
    "version": "1.0",
    "description": "Syncs video playback and chat for a better watch party experience.",
    "permissions": [ 
        "activeTab",
        "storage",
        "tabs",
        "webNavigation",
        "scripting"
    ],
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "action": {
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": [
                "http://localhost:3000/*", 
                "*://*.netflix.com/*"
            ],
            "js": [
                "js/peerjs.min.js",
                "classes/Room.js",
                "classes/VideoSynchronizer.js",
                "classes/WatchPartyState.js",
                "content.js"
            ],
            "type": "module"
        }
    ],
    "web_accessible_resources": [{
    "resources": [
      "*.js"
    ],
    "matches": ["<all_urls>"]
  }],
    "host_permissions": [
        "*://*.netflix.com/*",
        "http://localhost:3000/*"
    ]
}