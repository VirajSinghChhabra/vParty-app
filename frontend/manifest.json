{
    "mainfest_version": 3,
    "name": "vParty Extension",
    "version": "1.0",
    "description": "A Chrome extension for synchronized Netflix viewing with friends.",
    "action": {
        "default_popup": "popup.html",
        "default_icon": "icon.png"
    },
    "permissions": ["tabs", "storage"],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": ["https://*.netflix.com/*"],
            "js": ["content.js"]
        }
    ],
    "host_permissions": ["https://*.netflix.com/*"]
}